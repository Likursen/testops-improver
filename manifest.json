{
    "manifest_version": 3,
    "name": "TestOps Improver",
    "version": "6.2",
    "icons": {
        "16": "icons/logo16.png",
        "32": "icons/logo32.png",
        "48": "icons/logo48.png",
        "128": "icons/logo128.png"
    },
    "permissions": [
        "tabs",
        "scripting",
        "contextMenus",
        "storage"
    ],
    "host_permissions": [
        "https://jira.moscow.alfaintra.net/*",
        "https://testops.moscow.alfaintra.net/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://jira.moscow.alfaintra.net/*",
                "https://testops.moscow.alfaintra.net/*"
            ],
            "js": [
                "content.js"
            ],
            "all_frames": true,
            "match_about_blank": true,
            "run_at": "document_start"
        }
    ],
    "background": {
        "service_worker": "service-worker.js",
        "type": "module"
    },
    "action": {
        "default_icon": {
            "16": "icons/logo16.png",
            "32": "icons/logo32.png"
        },
        "default_title": "Скрыть/Показать боковые панели"
    },
    "options_page": "options.html"
}